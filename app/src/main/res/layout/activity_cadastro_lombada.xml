<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.CadastroLombadaActivity">

    <!-- Imagem de logo -->
    <ImageView
        android:id="@+id/imagePlantCadastroLombada"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo_alerta"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nome da Lombada -->
    <EditText
        android:id="@+id/editTextNomeLombada"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Nome da Lombada"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/imagePlantCadastroLombada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cidade -->
    <EditText
        android:id="@+id/editTextCidadeLombada"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Cidade"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNomeLombada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Endereço da Lombada -->
    <EditText
        android:id="@+id/editTextEnderecoLombada"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Endereço da Lombada"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editTextCidadeLombada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Cadastrar -->
    <Button
        android:id="@+id/buttonCadastrarLombada"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Cadastrar Lombada"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/editTextEnderecoLombada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra inferior com botão de voltar -->
    <LinearLayout
        android:id="@+id/BottomBarCadastroLombada"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#B2DFDB"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonVoltarCadastroLombada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="←"
            android:textColor="#000000"
            android:textSize="24sp"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/textViewCadastroTituloLombada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Cadastro de Lombada"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
