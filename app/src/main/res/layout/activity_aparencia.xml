<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.AparenciaActivity">
    <TextView
        android:id="@+id/textDescricaoAparencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Personalização de temas em breve!\n\nAcompanhe as próximas atualizações."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBarAparencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra inferior (Voltar + Título) -->
    <LinearLayout
        android:id="@+id/bottomBarAparencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B2DFDB"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonVoltarAparencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:background="@android:color/transparent"
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textTituloAparencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aparência"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
